<p id="notice"><%= notice %></p>

<h1>Leans</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leans.each do |lean| %>
      <tr>
        <td><%= lean.date %></td>
        <td><%= lean.name %></td>
        <td><%= lean.age %></td>
        <td><%= link_to 'Show', lean %></td>
        <td><%= link_to 'Edit', edit_lean_path(lean) %></td>
        <td><%= link_to 'Destroy', lean, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lean', new_lean_path %>
